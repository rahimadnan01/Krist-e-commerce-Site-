<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Krist</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body class="w-full h-screen flex justify-center items-center">
    <!-- main div -->
    <div class="w-[60%] h-[80%] bg-gray-100 flex">
      <!-- left div -->
      <div class="w-1/2 h-full bg-signup-left bg-center bg-cover">
        <!-- logo -->
        <div
          class="w-[6rem] h-[3rem] bg-sign-in bg-center bg-contain bg-no-repeat my-3 ml-3"
        ></div>
      </div>
      <!-- right div -->
      <div class="w-1/2 h-full flex justify-center items-center">
        <div class="w-[90%] h-[100%] bg-gray-100">
          <h1 class="my-3 font-bold text-2xl">Create New Account</h1>
          <form
            id="signup-form"
            action="/api/v1/auth/register"
            method="Post"
            enctype="multipart/form-data"
          >
            <div class="w-full h-10 mb-10">
              <label for="username" class="text-slate-600">Username</label>
              <input
                class="w-full h-full outline outline-1 outline-gray-800 rounded-md focus:outline-blue-500 px-4 py-2"
                type="text"
                placeholder="Enter your name"
                name="username"
                id="username"
                autocomplete="off"
                required
              />
            </div>
            <div class="w-full h-10 mb-10">
              <label for="email" class="text-slate-600">Email</label>
              <input
                class="w-full h-full outline outline-1 outline-gray-800 rounded-md focus:outline-blue-500 px-4 py-2"
                type="email"
                placeholder="Enter your Email"
                name="email"
                id="email"
                autocomplete="off"
                required
              />
            </div>
            <div class="w-full h-10 mb-10">
              <label for="password" class="text-slate-600">Password</label>
              <input
                class="w-full h-full outline outline-1 outline-gray-800 rounded-md focus:outline-blue-500 px-4 py-2"
                type="password"
                placeholder="Enter your Password"
                name="password"
                id="password"
              />
            </div>

            <!-- signup link -->
            <div
              class="w-full flex justify-end items-center pr-[2rem] mb-[2rem]"
            >
              <a
                class="text-blue-800 underline"
                href="http://localhost:3000/api/v1/users/login"
                >Login?</a
              >
            </div>
            <!-- button -->
            <div class="mt-1 w-full h-[3rem] text-center">
              <button
                type="submit"
                class="px-20 py-3 bg-black text-white rounded-md hover:bg-slate-300"
              >
                Signup
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script src="/js/signup.js"></script>
  </body>
</html>
