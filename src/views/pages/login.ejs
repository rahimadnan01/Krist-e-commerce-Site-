<%- layout("/layouts/boilerplate") %>
<body class="w-full h-screen bg-blue-500 flex justify-center items-center">
  <!-- main div -->
  <div class="w-[60%] h-[80%] bg-white flex">
    <!-- left div -->
    <div class="w-1/2 h-full bg-login-left bg-center bg-cover">
      <!-- logo -->
      <div
        class="w-[6rem] h-[3rem] bg-sign-in bg-center bg-contain bg-no-repeat my-3 ml-3"
      ></div>
    </div>
    <!-- right div -->
    <div class="w-1/2 h-full flex justify-center items-center">
      <div class="w-[90%] h-[80%] bg-white pt-10">
        <h1 class="my-3 font-bold text-2xl">Welcome ðŸ‘‹</h1>
        <form action="">
          <div class="w-full h-10 mb-10">
            <label for="email" class="text-slate-600">Email</label>
            <input
              class="w-full h-full outline outline-1 outline-gray-800 rounded-md focus:outline-blue-500 px-4 py-2"
              type="text"
              placeholder="Enter your Email"
              name="email"
              id="email"
              autocomplete="off"
              required
            />
          </div>
          <div class="w-full h-10 mb-10">
            <label for="password" class="text-slate-600">Password</label>
            <input
              class="w-full h-full outline outline-1 outline-gray-800 rounded-md focus:outline-blue-500 px-4 py-2"
              type="text"
              placeholder="Enter your Password"
              name="password"
              id="password"
            />
          </div>
          <div class="mt-3 w-full h-[3rem] text-center">
            <button
              type="submit"
              class="px-20 py-3 bg-black text-white rounded-md hover:bg-slate-300"
            >
              Login
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
